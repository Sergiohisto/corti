---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Steps from "../components/Steps.astro";
import GridIma from "../components/GridIma.astro";
import About from "../components/About.astro";
import Testimonial from "../components/Testimonial.astro";
---

<Layout title="Maria Jose Arteta .">
  <Header />

  <main class="max-w-[1920px] mx-auto bg-white overflow-hidden">
    <!-- grid image  -->
    <GridIma />
    <Hero />
    <Steps />
    <About />
    <Testimonial />

    <div class="h-[3000px]"></div>

    <script>
      import "../scripts/main";
    </script>
  </main>

  <style>
    a {
      @apply hover:text-accent;
    }

    .nav-is-open {
      @apply h-[350px] p-6;
    }

    .h2 {
      @apply text-[50px] lg:text-[64px] leading-none text-primary;
    }
  </style>
</Layout>
